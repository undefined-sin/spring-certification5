<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean name="helloService" class="org.study.spring5.container.overview.HelloWorldService" />
    <bean name="helloServiceWithFactory"
          class="org.study.spring5.container.overview.HelloWorldService"
          factory-method="factoryMethod" />
    <bean name="nestedService" class="org.study.spring5.container.overview.HelloWorldService$NestedBeanService"/>
</beans>